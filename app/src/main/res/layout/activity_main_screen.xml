<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/boneWhite"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/navBar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <Button
                android:id="@+id/menuBtn"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:width="27dp"
                android:background="@drawable/ic_menu"
                android:gravity="left|center_vertical" />

            <ImageView
                android:id="@+id/logo_box"
                android:layout_width="266dp"
                android:layout_height="77dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:src="@drawable/logo" />

            <Button
                android:id="@+id/plus_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_shape"
                android:text="@string/plus_sign"
                android:textColor="@color/boneWhite"
                android:textSize="30dp" />

            </LinearLayout>

        <LinearLayout
            android:id="@+id/eventsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">
            <fragment
                    android:id="@+id/fragmentMap"
                    android:name="com.gdziejestmecz.gdzie_jest_mecz.MapViewFragment"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" android:tag="fragmentMap"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/searchBar">

                <EditText
                        android:layout_width="248dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/searchText"
                        android:layout_weight="0.5"
                        android:inputType="textPersonName"
                        android:hint="@string/search_hint"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/search_button" android:id="@+id/searchButton"
                        android:onClick="searchLocation"/>

            </LinearLayout>

                <LinearLayout
                    android:id="@+id/eventListHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/closestEventsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/closest_events"
                        android:textColor="@color/blackyBlack"
                        android:textSize="18sp"
                        app:fontFamily="@font/montserrat"
                        tools:textColor="@color/blackyBlack" />

                    <LinearLayout
                        android:id="@+id/eventListHeaderRight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/sortingIcon"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:background="@color/boneWhite" />

                        <TextView
                            android:id="@+id/sortingLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/sorting_label"
                            android:textSize="15sp"
                            app:fontFamily="@font/montserrat"
                            tools:textColor="@color/lightGray" />
                    </LinearLayout>
                </LinearLayout>

                <ListView
                    android:id="@+id/eventsListContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>
            </LinearLayout>
        </LinearLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/sideNav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/header"
            app:menu="@menu/side_view">
        </android.support.design.widget.NavigationView>



    </android.support.v4.widget.DrawerLayout>

    <RelativeLayout
        android:id="@+id/add_event_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/x_btn_add_event_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="X" />
            <TextView
                android:id="@+id/aep_title_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dodaj event:"
                app:fontFamily="@font/montserrat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Id meczu:"
                app:fontFamily="@font/montserrat" />

            <EditText
                android:id="@+id/input_matchId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="id meczu..."
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID pubu:"
                app:fontFamily="@font/montserrat" />

            <EditText
                android:id="@+id/input_pubId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="id pubu..."
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dodatkowy opis:"
                app:fontFamily="@font/montserrat" />

            <EditText
                android:id="@+id/input_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="darmowe piwko?..."/>
            <Button
                android:id="@+id/add_btn_add_event_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Dodaj" />



        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_pub_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/x_btn_add_pub_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="X" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dodaj pub:"
                app:fontFamily="@font/montserrat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nazwa lokalu:"
                app:fontFamily="@font/montserrat" />

            <EditText
                android:id="@+id/input_pub_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="np. Piwoteka, Biblioteka..."
                android:inputType="phone" />

            <!-- insert mapfragment here -->

            <Button
                android:id="@+id/add_btn_add_pub_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Dodaj" />



        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
