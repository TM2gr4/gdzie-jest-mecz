<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/boneWhite"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mainLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/navBar"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="4dp">

                <Button
                    android:id="@+id/menuBtn"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:width="27dp"
                    android:background="@drawable/ic_menu"
                    android:gravity="left|center_vertical" />

                <ImageView
                    android:id="@+id/logo_box"
                    android:layout_width="266dp"
                    android:layout_height="77dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/logo" />

                <Button
                    android:id="@+id/plus_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_shape"
                    android:text="@string/plus_sign"
                    android:textColor="@color/boneWhite"
                    android:textSize="30dp" />

            </LinearLayout>

        <fragment
                android:id="@+id/fragmentMap"
                android:name="com.gdziejestmecz.gdzie_jest_mecz.MapViewFragment"
                android:layout_width="match_parent"
                android:layout_height="215dp" android:tag="fragmentMap"/>

        <LinearLayout
            android:id="@+id/eventsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/eventListHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/closestEventsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/closest_events"
                        android:textColor="@color/blackyBlack"
                        android:textSize="18sp"
                        app:fontFamily="@font/montserrat"
                        tools:textColor="@color/blackyBlack" />

                    <LinearLayout
                        android:id="@+id/eventListHeaderRight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/sortingIcon"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:background="@color/boneWhite" />

                        <TextView
                            android:id="@+id/sortingLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/sorting_label"
                            android:textSize="15sp"
                            app:fontFamily="@font/montserrat"
                            tools:textColor="@color/lightGray" />
                    </LinearLayout>
                </LinearLayout>

                <ListView
                    android:id="@+id/eventsListContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>
            </LinearLayout>
        </LinearLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/sideNav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/header"
            app:menu="@menu/side_view">
        </android.support.design.widget.NavigationView>



    </android.support.v4.widget.DrawerLayout>

    <RelativeLayout
        android:id="@+id/add_event_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone" >

        <Button
            android:id="@+id/x_btn_add_event_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</RelativeLayout>
